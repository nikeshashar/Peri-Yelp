<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>

    <h2><%= restaurant.name %></h2>

    <h3>Average Rating: <%= star_rating(restaurant.average_rating) %></h3>


    <h4><%= restaurant.address %></h4>
    <h4><%= restaurant.phone_number %></h4>
    <h4><%= restaurant.location_name %></h4>

	<%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
	<%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
	<%= link_to "Review #{restaurant.name} #{restaurant.location_name}", new_restaurant_review_path(restaurant) %>

	<ul>
		<% restaurant.reviews.each do |review| %>
		<li><%= "#{review.comments} (#{star_rating(review.rating)})"
		%>
		<em>Posted: <%= time_ago_in_words(review.created_at) %></em>
		<%= review.likes.count %> likes
		<%= link_to 'Likes', review_likes_path(review), method: :post %>

	</li>
		<% end %>
	</ul>

  <% end %>

<% else %>

	No restaurants yet

<% end %>

<%= link_to 'Add a restaurant', new_restaurant_path %>



